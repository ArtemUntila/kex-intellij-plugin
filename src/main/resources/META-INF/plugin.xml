<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>org.vorpal.research.kex-plugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Kex</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/vorpal-research">Vorpal</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Kex plugin for IntelliJ IDEA (prototype)
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Kex" secondary="false" anchor="bottom" icon="/icons/kex_16.svg"
                    factoryClass="org.vorpal.research.kex.plugin.KexToolWindowFactory"
                    canCloseContents="true"
        />
        <applicationConfigurable parentId="tools"
                                 instance="org.vorpal.research.kex.plugin.settings.KexSettingsConfigurable"
                                 id="org.vorpal.research.kex.plugin.settings.KexSettingsConfigurable"
                                 displayName="Kex"/>
        <applicationService serviceImplementation="org.vorpal.research.kex.plugin.settings.KexSettingsStateComponent"/>

        <applicationConfigurable parentId="org.vorpal.research.kex.plugin.settings.KexSettingsConfigurable"
                                 instance="org.vorpal.research.kex.plugin.settings.KexOptionsConfigurable"
                                 id="org.vorpal.research.kex.plugin.settings.KexOptionsConfigurable"
                                 displayName="Kex"/>
        <applicationService serviceImplementation="org.vorpal.research.kex.plugin.settings.KexOptionsStateComponent"/>

        <applicationConfigurable parentId="org.vorpal.research.kex.plugin.settings.KexSettingsConfigurable"
                                 instance="org.vorpal.research.kex.plugin.settings.TestGenOptionsConfigurable"
                                 id="org.vorpal.research.kex.plugin.settings.TestGenOptionsConfigurable"
                                 displayName="Test Generation"/>
        <applicationService serviceImplementation="org.vorpal.research.kex.plugin.settings.TestGenOptionsStateComponent"/>

        <applicationConfigurable parentId="org.vorpal.research.kex.plugin.settings.KexSettingsConfigurable"
                                 instance="org.vorpal.research.kex.plugin.settings.ConcolicOptionsConfigurable"
                                 id="org.vorpal.research.kex.plugin.settings.ConcolicOptionsConfigurable"
                                 displayName="Concolic"/>
        <applicationService serviceImplementation="org.vorpal.research.kex.plugin.settings.ConcolicOptionsStateComponent"/>

        <applicationConfigurable parentId="org.vorpal.research.kex.plugin.settings.KexSettingsConfigurable"
                                 instance="org.vorpal.research.kex.plugin.settings.ExecutorOptionsConfigurable"
                                 id="org.vorpal.research.kex.plugin.settings.ExecutorOptionsConfigurable"
                                 displayName="Executor"/>
        <applicationService serviceImplementation="org.vorpal.research.kex.plugin.settings.ExecutorOptionsStateComponent"/>
    </extensions>

    <actions>
        <!--TODO: Custom Icon (https://www.flaticon.com/free-icon/muffin_7808702?related_id=7808702&origin=tag)-->
        <group id="Kex" class="org.vorpal.research.kex.plugin.KexActionGroup" text="Kex" popup="true"
               icon="/icons/kex_16.svg">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
            <action class="org.vorpal.research.kex.plugin.ProjectViewAction"
                    id="Kex.Actions.ProjectViewAction"
                    text="Generate Tests"
            />
        </group>
    </actions>

</idea-plugin>